# ========================================
# CONTRACTX ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it contains secrets)

# ========================================
# GEMINI API CONFIGURATION (REQUIRED)
# ========================================
# Get your key from: https://aistudio.google.com/app/apikeys
GEMINI_API_KEY=your_gemini_api_key_here

# Model selection (check availability on your account)
# Options: gemini-2.5-flash, gemini-2.0-flash-exp, gemini-1.5-flash, gemini-1.5-pro
GEMINI_MODEL=gemini-2.5-flash

# Rate limiting (to avoid quota errors)
GEMINI_REQUEST_DELAY=3.0          # Seconds between API calls
MAX_RETRIES=5                      # Retry attempts on failure
RETRY_DELAY=60                     # Initial delay before retry (seconds)
EXPONENTIAL_BACKOFF=true           # Exponential backoff strategy

# ========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contractx
DB_USER=contractx_user
DB_PASSWORD=your_secure_password

# Alternative: Use Docker postgres
# DB_HOST=postgres (when using docker-compose)

# ========================================
# NEO4J CONFIGURATION (Knowledge Graph)
# ========================================
# Neo4j server connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# For Docker:
# NEO4J_URI=bolt://neo4j:7687

# ========================================
# QDRANT CONFIGURATION (Vector Store)
# ========================================
# Qdrant server for RAG
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=contractx_documents

# For Docker:
# QDRANT_HOST=qdrant

# ========================================
# SERVER CONFIGURATION
# ========================================
HOST=0.0.0.0
PORT=8000
DEBUG=false                        # Set to true for development only

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_UPLOAD_SIZE=52428800           # 50MB in bytes
UPLOAD_DIR=uploads
LOG_DIR=logs
LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR

# ========================================
# AUTHENTICATION (Optional)
# ========================================
AUTH_REQUIRED=false

# ========================================
# PRODUCTION RECOMMENDATIONS
# ========================================
# 1. Use strong passwords for DB and Neo4j
# 2. Set DEBUG=false
# 3. Use environment-specific secrets management
# 4. Enable HTTPS in production
# 5. Setup database backups
# 6. Monitor Gemini API quota usage
# 7. Use managed services (RDS, Managed Neo4j) for production
